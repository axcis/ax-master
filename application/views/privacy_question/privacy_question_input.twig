{% extends('common/base_input.twig')%}

{% block title %}
	{{ form.form_title("Pマーク問題"~value) }}
{% endblock %}

{% block inputform %}
	<dl>
		{% if id == '' %}
			<dt>{{ form.set_col("問題番号", 1) }}</dt>
			<dd>{{ form.input("question_no", question_no, "text", "", "", 20) }}</dd>
		{% endif %}
		<dt>{{ form.set_col("問題", 1) }}</dt>
		<dd>{{ form.textarea("question", 50, 5, question) }}</dd>
		<dt>{{ form.set_col("解答群", 1) }}</dt>
		<dd>※解答群は以下のフォーマットで入力してください。</dd>
		<dd>　答え1,答え2,答え3…</dd>
		<dd>{{ form.input("answer_list", answer_list, "text", "", "", 50) }}</dd>
		<dt>{{ form.set_col("答え", 1) }}</dt>
		<dd>答えは必ず1つにしてください。</dd>
		<dd>{{ form.input("answer", answer, "text", "", "", 20) }}</dd>
		<dt>{{ form.set_col("点数", 1) }}</dt>
		<dd>{{ form.input("point", point, "text", "", "", 20) }}</dd>
	</dl>
{% endblock %}